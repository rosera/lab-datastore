    style.
      .header {
         text-align: center;
         font-family: roboto;
      }

      .card {
         box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
         max-width: 600px;
         margin: auto;
         text-align: center;
         font-family: roboto;
      }

      .release {
         color: grey;
         font-size: 22px;
      }

      .description {
         color: black;
         font-size: 18px;
         padding: 8px;
      }

      .card button {
         border: none;
         outline: 0;
         padding: 12px;
         color: white;
         background-color: #000;
         text-align: center;
         cursor: pointer;
         width: 100%;
         font-size: 18px;
       }

       .card button:hover {
         opacity: 0.7;
       }
